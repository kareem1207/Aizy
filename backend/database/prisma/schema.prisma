generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("SQL_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String
  name      String
  password  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([email, role])
}

model BannedUser {
  id          String    @id @default(cuid())
  userId      String    @unique
  email       String
  name        String
  reason      String?
  bannedUntil DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
}
